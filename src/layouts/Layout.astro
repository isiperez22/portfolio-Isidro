---
// Supports weights 100-700
import "@fontsource-variable/josefin-sans";
import Header from "../components/Header.astro";
import "/src/styles/global.css";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Portfolio de Isidro Perez" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Isidro Perez | Portfolio</title>
  </head>
  <body
    class="relative text-[var(--dark-color)] dark:text-[var(--light-color)]"
  >
    <div
      class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full bg-[var(--light-color)] dark:bg-[#0a0f13]
            dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(242,244,244,0.3),rgba(255,255,255,0))]"
    >
    </div>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
